<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">
    <ImageView
            android:layout_width="239dp"
            android:layout_height="260dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            tools:layout_editor_absoluteY="-21dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="189dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.651" android:hint="xxxx-xxxx-xxxx-xxxx"/>
    <TextView
            android:text="Introduce el IBAN:"
            android:layout_width="134dp"
            android:layout_height="20dp" android:id="@+id/textView4"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.51"/>
</androidx.constraintlayout.widget.ConstraintLayout>